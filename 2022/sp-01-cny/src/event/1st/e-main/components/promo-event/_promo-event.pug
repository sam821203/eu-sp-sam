//- TODO: 如果promo不和hero綁一起時要有自己的section和layout--main
section.promo__group.promo__group--promo-event.m-bottom--lg
  .decor--promo-web
    .decor--top.decor--lamp-left
      img(src="event/1st/e-main/components/promo-event/decor-lamp-left-web.png", alt="")
    .decor--top.decor--lamp-right
      img(src="event/1st/e-main/components/promo-event/decor-lamp-right-web.png", alt="")

  .layout--main
    .promo__wrap--special
      .promo__zone--special
          .decor--top.decor--promo.full-parent
            .decor--top.decor--lamp.decor--lamp-left
              img(src="event/1st/e-main/components/promo-event/decor-lamp.png", alt="")
            .decor--top.decor--lamp.decor--lamp-right
              img(src="event/1st/e-main/components/promo-event/decor-lamp.png", alt="")
          .promo__block
            ul.event__block
              each data, index in promoData
                if index <= 1
                  li.promo__item
                    a(href= data.link, title= data.alt)
                      img(src= data.imgSrc, alt= data.alt)
    .promo__wrap
      .promo__zone
        .event__wrap
          .promo__block
            .promo__box
              .event__block
                .swiper-container.container--promo-event
                  ul.swiper-wrapper
                    each data, index in promoItemE
                      if index < 2
                        li.swiper-slide
                          a(href= data.link, title=data.alt)
                            img(src= data.imgSrc, data.alt)
                ul.event__box
                  each data, index in promoItemE
                    if index == 2
                      li.promo__item
                        a(href= data.link, title= data.alt)
                          img(src= data.imgSrc, alt= data.alt)
              ul.event__item
                each data, index in promoItemE
                  if index == 3
                    li.promo__item
                      a(href= data.link, title= data.alt).full-parent
                        img(src= data.imgSrc, alt= data.alt)
            ul.promo__box
              each data, index in promoItemE
                if index > 3 && index <= 6
                  li.promo__item
                    a(href= data.link, title= data.alt)
                      img(src= data.imgSrc, alt= data.alt)
            .slider__box
              .swiper-container.container--promo-event
                ul.swiper-wrapper
                  each data, index in promoItemE
                    if index > 6 && index <= 8
                      li.swiper-slide
                        a(href= data.link, title=data.alt)
                          img(src= data.imgSrc, data.alt)
            .slider__box
              .swiper-container.container--promo-event
                ul.swiper-wrapper
                  each data, index in promoItemE
                    if index > 8
                      li.swiper-slide
                        a(href= data.link, title=data.alt)
                          img(src= data.imgSrc, data.alt)


