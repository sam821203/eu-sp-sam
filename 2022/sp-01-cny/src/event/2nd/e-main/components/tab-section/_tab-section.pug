section.promo__group.promo__group--tab-section.m-bottom--lg(data-title="禮物攻略")
  .layout--main
    .promo__wrap
      .decoration__title#decorTabSection
        img(src="event/2nd/e-main/components/tab-section/decor-tab-section.png", alt="")
      .promo__zone 
        ul.tab__wrap
          li.tab__zone
            ul#tabBox.tab__box
              li.tab__item(title="$1000專區")
                img(src="event/2nd/e-main/components/tab-section/items/tab/tab-1.png", alt="$1000專區")
                .tab__item--top.active
                  img(src="event/2nd/e-main/components/tab-section/items/tab/tab-1-2.png", alt="$1000專區")
              li.tab__item(title="$3000專區")
                img(src="event/2nd/e-main/components/tab-section/items/tab/tab-2.png", alt="$3000專區")
                .tab__item--top
                  img(src="event/2nd/e-main/components/tab-section/items/tab/tab-2-2.png", alt="$3000專區")
              li.tab__item(title="$5000專區")
                img(src="event/2nd/e-main/components/tab-section/items/tab/tab-3.png", alt="$5000專區")
                .tab__item--top
                  img(src="event/2nd/e-main/components/tab-section/items/tab/tab-3-2.png", alt="$5000專區")
          li.content__zone
            ul#tabContentBlock.content__block
              li.content__box.active
                .tab__slider.swiper-container
                  ul.item__wrap.swiper-wrapper

              li.content__box
                .tab__slider.swiper-container
                  ul.item__wrap.swiper-wrapper

              li.content__box
                .tab__slider.swiper-container
                  ul.item__wrap.swiper-wrapper


