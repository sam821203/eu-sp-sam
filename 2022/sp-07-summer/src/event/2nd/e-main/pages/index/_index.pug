doctype html
html(lang='zh-Hant-TW')
  head
    meta(name='viewport' content="width=device-width, initial-scale=1")

    //- TODO: CSS檔案注意要放到assets內
    //- nav CSS (main left & right、sp left & right)
    //- ===========================
    //- 行銷主視覺用電梯(main)
    link(rel="stylesheet" href="main-elevator-left.css")
    link(rel="stylesheet" href="main-elevator-right.css")
    //- 商品館、禮包等需要被霸道電梯蓋過去的電梯(sp)
    //- link#localElevatorLeft(rel="stylesheet" href="sp-elevator-left.css")
    //- link#localElevatorRight(rel="stylesheet" href="sp-elevator-right.css")

  body
    //- header (logo + share tools)
    //- ===========================
    include /layout/header/_header

    .bg-web.full-parent
      .bg-web--top.full-parent#decorBgTop
        //- .sun
        .fire-work 
          include /utils/bg-decoration-instance/canvas-firework/_canvas-firework
        .bg-web--boat
          .boat__wrap 
            img(src="event/2nd/e-main/pages/index/bg-boat.png" alt="")
        .bg-web--bottom.full-parent#decorBgBottom

    //- main block (hero + promo section)
    //- ===========================
    main#spWrap.sp__wrap
      include /event/2nd/e-main/components/hero-section/_hero-section
      //- include /utils/bg-decoration-instance/parallax/_parallax


    //- other components
    //- ===========================
    //- 右sticky電梯定位點，可置放在各處
    include /event/2nd/e-main/components/promo-section/_promo-section
    include /event/2nd/e-main/components/promo-event/_promo-event
    #navRightBar.navRightBar
    include /event/2nd/e-main/components/dynamic-slider/_dynamic-slider
    include /event/2nd/e-main/components/dynamic-slider-2/_dynamic-slider-2
    include /event/2nd/e-main/components/tab-section/_tab-section
    include /event/2nd/e-main/components/event-w3m3/_event-w3m3
    include /event/2nd/e-main/components/bn-slider/_bn-slider
    include /event/2nd/e-main/components/beat-game/_beat-game
    include /event/2nd/e-main/components/promo-slider-sec/_promo-slider-sec
    include /event/2nd/e-main/components/promo-slider-2/_promo-slider-2
    include /event/2nd/e-main/components/bn-section/_bn-section
    include /event/2nd/e-main/components/daily-time/_daily-time

    //- 左固定電梯定位點，也可移動，但在ajax要重繪的物件放底部可以讓上方load更快
    #elevatorHome.elevatorHome.js--main--dialog

    //- footer
    //- ===========================
    //- include /layout/footer/_footer

    //- script區
    include /utils/pug/include/_general.pug

    //- TODO: 以下資源注意要放到assets內
    //- nav JS (main left & right、sp left & right)
    //- ===========================
    //- 行銷主視覺用電梯(main)
    script(src="main-elevator.js")
    //- 商品館、禮包等需要被霸道電梯蓋過去的電梯(sp)
    //- script#checkElevator(src="https://media.etmall.com.tw/sp/11911/check-elevator.js")

    //- data區
    script#check(src="check.js")
    script#dataDynamicSlider(src='data-dynamic-slider.js')
    script#dataDynamicSlider2(src='data-dynamic-slider-2.js')
    script#dataTab(src='data-tab.js')
    script#dataDailyTime(src='data-daily-time.js')
    script#checkElevator(src="https://media.etmall.com.tw/sp/11911/check-elevator.js")

