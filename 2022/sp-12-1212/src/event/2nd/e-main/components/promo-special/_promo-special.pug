        img(src="event/2nd/e-main/components/promo-special/decor-promo-sp-gift1.png", alt="")
      .decor__item.decor__item--gift2#decorPromoSpecialGift2
        img(src="event/2nd/e-main/components/promo-special/decor-promo-sp-gift2.png", alt="")
    .promo__wrap
      .promo__zone
        .promo__block
          ul.event__block
            each data, index in promoSpecialData
              li(id="promoSpecialItem" + (index + 1))
                a(href= data.link, title=data.alt)
                  img(src= data.imgSrc, alt=data.alt)
          .promo__slider
            .slider__wrap
              .swiper-container#promoSpReady
                ul.swiper-wrapper
                  each data in promoSpecialSlider
                    li.swiper-slide
                      a(href= data.link, title=data.alt)
                        img(src= data.imgSrc, alt=data.alt)

