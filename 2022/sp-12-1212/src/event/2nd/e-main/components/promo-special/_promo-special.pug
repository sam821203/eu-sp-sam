    .decor__wrap.full-parent
      .decor__item.decor__item--title
        img(src="event/2nd/e-main/components/promo-special/decor-promo-sp-title.png", alt="")
      .decor__item.decor__item--left
        img(src="event/2nd/e-main/components/promo-special/decor-promo-sp-left.png", alt="")
      .decor__item.decor__item--right
        img(src="event/2nd/e-main/components/promo-special/decor-promo-sp-right.png", alt="")
      .decor__item.decor__item--bottom
        img(src="event/2nd/e-main/components/promo-special/decor-promo-sp-bottom.png", alt="")
