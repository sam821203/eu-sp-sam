section.promo__group.promo__group--tab-section.m-bottom--lg(data-title="88節這樣買")
  .layout--main
    .decor__wrap 
      .decor__item.decor__item--wallet#tabSectionWallet
        .open 
          img(src="event/1st/e-main/components/tab-section/decor-tab-section-open.png" alt="")
        .not-open
          img(src="event/1st/e-main/components/tab-section/decor-tab-section.png" alt="")
      .decor__item.decor__item--money#tabSectionMoney
        img(src="event/1st/e-main/components/tab-section/decor-tab-section-money.png" alt="")
      .decor__item.decor__item--money2#tabSectionMoney2
        img(src="event/1st/e-main/components/tab-section/decor-tab-section-money.png" alt="")
    .promo__wrap
      .promo__zone 
        ul.tab__wrap
          li.tab__zone
            ul#tabBox.tab__box
              li.tab__item(title="$11專區")
                img(src="event/1st/e-main/components/tab-section/items/tab/tab-1.png" alt="$11專區")
                .tab__item--top.active
                  img(src="event/1st/e-main/components/tab-section/items/tab/tab-1-2.png" alt="$11專區")
              li.tab__item(title="$11專區")
                img(src="event/1st/e-main/components/tab-section/items/tab/tab-2.png" alt="$111專區")
                .tab__item--top
                  img(src="event/1st/e-main/components/tab-section/items/tab/tab-2-2.png" alt="$111專區")
              li.tab__item(title="$1,111專區")
                img(src="event/1st/e-main/components/tab-section/items/tab/tab-3.png" alt="$1,111專區")
                .tab__item--top
                  img(src="event/1st/e-main/components/tab-section/items/tab/tab-3-2.png" alt="$1111專區")
          li.content__zone
            ul#tabContentBlock.content__block
              li.content__box.active
                .tab__slider.swiper-container
                  ul.item__wrap.swiper-wrapper

              li.content__box
                .tab__slider.swiper-container
                  ul.item__wrap.swiper-wrapper

              li.content__box
                .tab__slider.swiper-container
                  ul.item__wrap.swiper-wrapper


