section#bnSpecial.promo__group.promo__group--bn-special.m-bottom--lg(data-title="銀行/支付")
  .layout--main
    .decor__wrap.full-parent
      .decor__item
        img(src="event/1st/e-main/components/bn-special/bn-special-left.png" alt="")
      .decor__item
        img(src="event/1st/e-main/components/bn-special/bn-special-right.png" alt="")
    .promo__wrap
      #bnSpecialPromoZone.promo__zone
        .slider__box.full-parent
          .promo__slider.full-parent
            #sliderSpecialPrev.swiper-container.prev.full-parent
              ul.swiper-wrapper
                //- prev
                each data in bankItemPrev
                  li.swiper-slide.month--prev
                    a(href= bankInfoPrev + bankPageName[data.name], title=data.name + data.promo)
                      img.swiper-lazy(data-src= data.imgSrc, alt= data.promo)
                      .swiper-lazy-preloader.swiper-lazy-preloader-white
            #sliderSpecialNext.swiper-container.next.full-parent
              ul.swiper-wrapper
                //- next
                each data in bankItemNext
                  li.swiper-slide.month--prev
                    a(href= data.link, title= data.promo)
                      img.swiper-lazy(data-src= data.imgSrc, alt= data.promo)
                      .swiper-lazy-preloader.swiper-lazy-preloader-white