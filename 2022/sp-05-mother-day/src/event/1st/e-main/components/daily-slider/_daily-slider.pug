section.daily__group.promo__group--daily-slider.m-bottom--lg(data-title="會員日")
  .layout--main
    .decor__wrap
      .decor__item.decor__item--title
        img(src="event/1st/e-main/components/daily-slider/title-daily-slider.png", alt="")
      .decor__item.decor__item--left#decorDailySliderLeft
        img(src="event/1st/e-main/components/daily-slider/decor-daily-slider-left.png", alt="")
      .decor__item.decor__item--right#decorDailySliderRight
        img(src="event/1st/e-main/components/daily-slider/decor-daily-slider-right.png", alt="")
    .title__text.daily__countdown
      .time__block
        .time__box
          span#dailyHourTens 0
        .time__box
            span#dailyHourUnits 0
      .time__block
        .time__box
          span#dailyMinTens 0
        .time__box
          span#dailyMinUnits 0
      .time__block
        .time__box
          span#dailySecTens 0
        .time__box
          span#dailySecUnits 0
    .promo__wrap
      .promo__zone
        .promo__block
          #dailySliderBlock.promo__slider.swiper-container
            .swiper-wrapper


