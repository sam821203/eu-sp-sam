      .decor__item.decor__item--item
        img(src="event/2nd/e-main/components/promo-special/decor-promo-sp.png", alt="")
    .promo__wrap
      .promo__zone
        .promo__block
          ul.event__block
            each data, index in promoSpecialData
              li(id="promoSpecialItem" + (index + 1))
                a(href= data.link, title=data.alt)
                  img(src= data.imgSrc, alt=data.alt)
          .promo__slider
            .slider__wrap
              .swiper-container#PromoSpReady
                ul.swiper-wrapper
