    //- link#localElevatorLeft(rel="stylesheet" href="sp-elevator-left.css")
    //- link#localElevatorRight(rel="stylesheet" href="sp-elevator-right.css")

  body
    //- header (logo + share tools)
    //- ===========================
    include /layout/header/_header

    .decor__bg.full-parent
    .decor__fg.full-parent
    //- main block (hero + promo section)
    //- ===========================
    main#spWrap.sp__wrap
      //- include /utils/bg-decoration-instance/parallax/_parallax
      include /event/3rd/e-main/components/hero-section/_hero-section
      include /event/3rd/e-main/components/promo-event/_promo-event
      include /event/3rd/e-main/components/promo-special/_promo-special

    //- other components
    //- ===========================
    //- 右sticky電梯定位點，可置放在各處
    #navRightBar.navRightBar
    include /event/3rd/e-main/components/dynamic-slider/_dynamic-slider
    include /event/3rd/e-main/components/daily-time/_daily-time
    //- include /event/3rd/e-main/components/daily-time-2/_daily-time-2
    //- include /event/3rd/e-main/components/daily-slider/_daily-slider
    include /event/3rd/e-main/components/slider-w1m1/_slider-w1m1
    include /event/3rd/e-main/components/tab-section/_tab-section
    include /event/3rd/e-main/components/tab-section-2/_tab-section-2
    include /event/3rd/e-main/components/event-w3m3/_event-w3m3
    include /event/3rd/e-main/components/dynamic-slider-half/_dynamic-slider-half
    include /event/3rd/e-main/components/slider-w2m2/_slider-w2m2
    include /event/3rd/e-main/components/bn-section/_bn-section
    include /event/3rd/e-main/components/bn-slider/_bn-slider
    include /event/3rd/e-main/components/bn-section-2/_bn-section-2
    //- include /event/3rd/e-main/components/bn-special/_bn-special

    //- 左固定電梯定位點，也可移動，但在ajax要重繪的物件放底部可以讓上方load更快
    #elevatorHome.elevatorHome.js--main--dialog

    //- footer
    //- ===========================
    //- include /layout/footer/_footer

    //- script區
    include /utils/pug/include/_general.pug

    //- TODO: 以下資源注意要放到assets內
