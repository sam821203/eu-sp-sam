section.promo__group.promo__group--promo-section.m-bottom--lg(data-title="攻略618")
  .layout--main
    .decor__wrap.full-parent
      .decor__item.decor__item--title#titlePromoSection
        img(src="event/2nd/e-main/components/promo-section/title-promo-section.png", alt="")
      .decor__item.decor__item--item-1#decorPromoSection
        img(src="event/2nd/e-main/components/promo-section/decor-promo-section-1.png", alt="")
      .decor__item.decor__item--item-2#decorPromoSectionSec
        img(src="event/2nd/e-main/components/promo-section/decor-promo-section-2.png", alt="")
    .promo__wrap
      .promo__zone
        .promo__block
          ul.event__block
            each data, index in promoSectionData
              if index == 0
                li
                  a(href= data.link, title=data.alt, id="changeLink")
                    img(src= data.imgSrc, alt=data.alt)
              if index == 1
                li
                  a(href= data.link, title=data.alt)
                    img(src= data.imgSrc, alt=data.alt)
              if index >= 2 && index < 4
                li.event--cover
                  a(href= data.link, title=data.alt)
                    img(src= data.imgSrc, alt=data.alt)
                  .item--cover
                    img(src="event/2nd/e-main/components/promo-section/items/item-cover.png", alt="")
                  .item--end
                    img(src="event/2nd/e-main/components/promo-section/items/item-end.png", alt="")
      .event__box#eventItem
        each data, index in promoSectionData
          if index == 4
            .event__item
              a(href= data.link, title=data.alt)
                img(src= data.imgSrc, alt=data.alt)


