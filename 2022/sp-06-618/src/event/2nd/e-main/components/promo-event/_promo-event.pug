section.promo__group.promo__group--promo-event.m-bottom--lg
  .layout--main
    .decor__wrap.full-parent
      .decor__item.decor__item--bg
        img(src="event/2nd/e-main/components/promo-event/decor-promo-bg.png", alt="")
      .decor__item.decor__item--title#titlePromoEvent
        img(src="event/2nd/e-main/components/promo-event/title-promo-event.png", alt="")
      .decor__item.decor__item--left#decorPromoEventLeft
        img(src="event/2nd/e-main/components/promo-event/decor-promo-left.png", alt="")
      .decor__item.decor__item--star-2#decorPromoEventStar2
        img(src="event/2nd/e-main/components/promo-event/decor-promo-star-2.png", alt="")
      .decor__item.decor__item--right#decorPromoEventRight
        img(src="event/2nd/e-main/components/promo-event/decor-promo-right.png", alt="")
      .decor__item.decor__item--star-1#decorPromoEventStar1
        img(src="event/2nd/e-main/components/promo-event/decor-promo-star-1.png", alt="")
    .promo__wrap
      .promo__zone
        .promo__block
          ul.event__wrap
            each data, index in promoItemE
              if index == 0
                li.promo__item
                  a(href= data.link, title= data.alt)
                    img(src= data.imgSrc, alt= data.alt)
            .swiper-container.container--promo-event
                ul.swiper-wrapper
                  each data, index in promoItemE
                    if index >= 1 && index < 4
                      li.swiper-slide
                        a(href= data.link, title=data.alt)
                          img(src= data.imgSrc, data.alt)
            each data, index in promoItemE
              if index == 4
                li.promo__item
                  a(href= data.link, title= data.alt)
                    img(src= data.imgSrc, alt= data.alt)
          ul.event__box
            each data, index in promoItemE
              if index >= 5 && index < 7 
                li.promo__item
                  a(href= data.link, title= data.alt)
                    img(src= data.imgSrc, alt= data.alt)
          ul.event__block
            each data, index in promoItemE
              if index >= 7
                li.promo__item
                  a(href= data.link, title=data.alt)
                    img(src= data.imgSrc, data.alt)
