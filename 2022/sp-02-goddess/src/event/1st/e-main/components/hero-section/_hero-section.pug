      .hero__zone
        .hero__title.hero__title--main
            img(src="event/1st/e-main/components/hero-section/title-hero-section.png", alt="")
        .hero__title--sub.swiper-container#heroTitle
          ul.swiper-wrapper
            each data, index in heroTitleE
              li.swiper-slide
                a(href= data.link, title=data.alt)
                  img(src= data.imgSrc, data.alt)
