    .decor__wrap.full-parent
      .decor__item.decor__item--left#decorBnSliderLeft
        img(src="event/2nd/e-main/components/bn-slider/decor-bn-slider-left.png", alt="")
      .decor__item.decor__item--right#decorBnSliderRight
        img(src="event/2nd/e-main/components/bn-slider/decor-bn-slider-right.png", alt="")
    .promo__wrap
      .promo__zone
        .promo__block
          .promo__box
            a(href="") 
              img(src="event/2nd/e-main/components/bn-slider/bn-bn-slider.png", alt="")
            #sliderBn.swiper-container
              ul.swiper-wrapper
                each data, index in bnSliderItemData
                  li.swiper-slide
                    a(href= data.link, title= data.alt)
                      img.swiper-lazy(data-src= data.imgSrc, alt="")
                      .swiper-lazy-preloader.swiper-lazy-preloader-black
