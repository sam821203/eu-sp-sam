section.promo__group.promo__group--promo-event.m-bottom--lg
  .layout--main
    .decor__wrap.full-parent
      .decor__item
        img(src="event/1st/e-main/components/promo-event/title-promo-event.png", alt="畢業快樂")
    .promo__wrap
      .promo__zone
        .promo__block
          ul.promo__box
            each data, index in promoItemE
              if index < 2
                li.promo__item
                  a(href= data.link, title= data.alt)
                    img(src= data.imgSrc, alt= data.alt)
          .event__wrap
            ul.event__box
              each data, index in promoItemE
                if index >= 2 && index < 8 
                  li.promo__item
                    a(href= data.link, title= data.alt)
                      img(src= data.imgSrc, alt= data.alt)
          .slider__box#scrollBackGround
            .swiper-container.container--promo-event
              ul.swiper-wrapper
                each data, index in promoItemE
                  if index >= 8
                    li.swiper-slide
                      a(href= data.link, title=data.alt)
                        img(src= data.imgSrc, data.alt)
