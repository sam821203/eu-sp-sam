section.promo__group.promo__group--tab-section.m-bottom--lg(data-title="中元拜拜箱")
  .layout--main
    .decor__wrap.full-parent
      .decor__item.decor__item--left#decorTabSectionLeft
        img(src="event/1st/e-main/components/tab-section/decor-tab-section-left.png", alt="")
      .decor__item.decor__item--right#decorTabSectionRight
        img(src="event/1st/e-main/components/tab-section/decor-tab-section-right.png", alt="")
    .promo__wrap
      .promo__zone 
        .promo__block
          ul.tab__wrap
            li.tab__zone
              ul#tabBox.tab__box
                li.tab__item(title="$500以下")
                  img(src="event/1st/e-main/components/tab-section/items/tab/tab-1.png", alt="$500以下")
                  .tab__item--top.active
                    img(src="event/1st/e-main/components/tab-section/items/tab/tab-1-2.png", alt="$500以下")
                li.tab__item(title="$500-$1000")
                  img(src="event/1st/e-main/components/tab-section/items/tab/tab-2.png", alt="$500-$1000")
                  .tab__item--top
                    img(src="event/1st/e-main/components/tab-section/items/tab/tab-2-2.png", alt="$500-$1000")
                li.tab__item(title="$1000以上")
                  img(src="event/1st/e-main/components/tab-section/items/tab/tab-3.png", alt="$1000以上")
                  .tab__item--top
                    img(src="event/1st/e-main/components/tab-section/items/tab/tab-3-2.png", alt="$1000以上")
            li.content__zone
              ul#tabContentBlock.content__block
                li.content__box.active
                  .tab__slider.swiper-container
                    ul.item__wrap.swiper-wrapper

                li.content__box
                  .tab__slider.swiper-container
                    ul.item__wrap.swiper-wrapper

                li.content__box
                  .tab__slider.swiper-container
                    ul.item__wrap.swiper-wrapper



