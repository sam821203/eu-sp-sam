      .promo__zone
        .event__wrap
          .promo__block
            ul.promo__box
              each data, index in promoItemE
                if index < 2
                  li.promo__item
                    a(href= data.link, title= data.alt)
                      img(src= data.imgSrc, alt= data.alt)
            .event__wrap
              .swiper-container.container--promo-event
                ul.swiper-wrapper
                  each data, index in promoItemE
                    if index >= 2 && index < 4
                      li.swiper-slide
                        a(href= data.link, title=data.alt)
                          img(src= data.imgSrc, data.alt)
              ul.event__box
                each data, index in promoItemE
                  if index == 4
                    li.promo__item
                      a(href= data.link, title= data.alt)
                        img(src= data.imgSrc, alt= data.alt)
              ul.event__item
                each data, index in promoItemE
                  if index == 5
                    li.promo__item
                      a(href= data.link, title= data.alt).full-parent
                        img(src= data.imgSrc, alt= data.alt)
            .event__block
              .swiper-container.container--promo-event
                ul.swiper-wrapper
                  each data, index in promoItemE
                    if index >= 6 && index < 8
                      li.swiper-slide
                        a(href= data.link, title=data.alt)
                          img(src= data.imgSrc, data.alt)
              ul.event__box
                each data, index in promoItemE
                  if index == 8
                    li.promo__item
                      a(href= data.link, title= data.alt)
                        img(src= data.imgSrc, alt= data.alt)
              ul.event__item
                each data, index in promoItemE
                  if index == 9
                    li.promo__item
                      a(href= data.link, title= data.alt).full-parent
                        img(src= data.imgSrc, alt= data.alt)
            .slider__box
              .swiper-container.container--promo-event
                ul.swiper-wrapper
                  each data, index in promoItemE
                    if index > 9 
                      li.swiper-slide
                        a(href= data.link, title=data.alt)
