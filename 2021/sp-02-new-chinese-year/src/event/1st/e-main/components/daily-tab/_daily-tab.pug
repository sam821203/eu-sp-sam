section.promo__group.promo__group--daily-tab(data-title="今日我最牛")
  .promo__daily--bg
  .layout--main
    ul.tab__wrap
      li.tab__zone
        #dailyTabHead.tab__head--daily.promo__slider.swiper-container
          ul.swiper-wrapper
            - var date = 19
            while date <= 31
              - var activeClass = 'active--daily'
              - if (date != 19) activeClass = ''
              li.swiper-slide(class= activeClass)
                span 1
                if date < 10
                  span= '0' + date++
                else
                  span= date++
            li.swiper-slide
              span 2
              span 01
            li.swiper-slide
              span 2
              span 02
      li.content__zone
        ul#dailyTabContent.tab__content--daily
          - var date = 19
          while date <= 31
            - var activeContentClass = 'active'
            - if (date != 19) activeContentClass = ''
            li.content__box(class= activeContentClass)
              .tab__slider--daily.swiper-container
                ul.item__group__wrap.swiper-wrapper
            - date++
          li.content__box
            .tab__slider--daily.swiper-container
              ul.item__group__wrap.swiper-wrapper
          li.content__box
            .tab__slider--daily.swiper-container
              ul.item__group__wrap.swiper-wrapper
