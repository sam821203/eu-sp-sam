    .promo__body
      .player__dynamic.player__dynamic--intro
        .intro__wrap
          .intro__view
            .pic__wrap
              .slider__container
                ul.slider__wrapper
                  - var n = 0
                  while n < 3
                    li.slider__item
                      .player__pic
                        .pic__box(style='background-image: url(../assets/fake-' + pet + '.jpg)')
