section.promo__group.promo__group--rank.m-bottom--md
  .layout--main
    .promo__head.m-bottom--sm
      .promo__title
        img(src="~components/rank-section/section-title-rank.png", alt="")
    .promo__body
      .tab__zone.tab__zone--rank
        .tab__block.tab__block--rank
          .tab__box
            ul.tab-list
              - var tabItems = ['人氣TOP 1', '汪組TOP 10', '喵組TOP 10']
              each item, index in tabItems
                  li
                    if index == 0
                      .btn--tab.action
                        div
                          span= item
                    else
                      .btn--tab
                        div
                          span= item

          .tab__content
            .content__box.active
              .content__container
                ul.content__wrapper
