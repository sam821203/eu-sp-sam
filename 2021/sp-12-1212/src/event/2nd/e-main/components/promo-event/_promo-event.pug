    .promo__wrap
      .promo__zone
        .promo__block
          ul.event__block
            each data, index in promoData
              if index == 0 
                li.promo__item
                  a(href= data.link, title= data.alt)
                    img(src= data.imgSrc, alt= data.alt)
          ul.event__wrap
            .event__item
              each data, index in promoData
                if index > 0 && index <= 2
                  li.promo__item
                    a(href= data.link, title= data.alt)
                      img(src= data.imgSrc, alt= data.alt)
