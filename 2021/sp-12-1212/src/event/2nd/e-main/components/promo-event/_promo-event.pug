              each data, index in promoData
                if index == 3
                  li.promo__item
                    a(href= data.link, title= data.alt)
                      img(src= data.imgSrc, alt= data.alt)
          ul.event__box
            each data, index in promoData
              if index > 3 && index <= 5
                li.promo__item
                  a(href= data.link, title= data.alt)
                    img(src= data.imgSrc, alt= data.alt)
          ul.event__slide
            .slide__item.swiper-container#promoEvent
              ul.swiper-wrapper
                each data, index in promoData
                  if index > 5 && index <= 11
                    li.swiper-slide
                      a(href= data.link, title=data.alt)
