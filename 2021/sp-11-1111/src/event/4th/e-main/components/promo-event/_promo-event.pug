      #promoEvent.promo__zone
        .promo__block
          ul.event__wrap
            each data, index in promoData
              if index == 1 || index == 5
                li
                  .swiper-container
                    ul.swiper-wrapper
                      li.swiper-slide
                        a(href= data.link, title=data.alt)
                          img(src= data.imgSrc, data.alt)
              else if index < 6
                li
                  a(href= data.link, title= data.alt)
                    img(src= data.imgSrc, alt= data.alt)
