    .promo__title.block--center
      img(src="~event/1st/e-main/components/flip-card/title-flip-card.png", alt="")
    .promo__wrap
      .card__wrap
        ul#cardBox.card__box
          each data in flipCardData
            li
              .card__item
                .card__front
                  a(href= data.itemLink, title= data.frontAlt)
                    img(src= data.frontImgSrc, alt = data.frontAlt)
                .card__back(title= data.backAlt)
                  img(src= data.backImgSrc, alt= data.backAlt)
              a.btn--fast-connect(href= data.itemLink, title= data.frontAlt)
                img(src="~event/1st/e-main/components/flip-card/btn-fast-connect.png", alt="more")
